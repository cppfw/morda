#!/usr/bin/make -f

soname := $(shell cat src/soname.txt)

%: debian/control
	dh $@


debian/control:
	sed -e "s/\$$(soname)/$(soname)/" $@.in >> $@


override_dh_auto_test:
#do nothing


.PHONY: override_dh_strip
override_dh_strip:
	dh_strip --dbg-package=libmorda$(soname)-dbg

override_dh_auto_install:
	PREFIX=/usr dh_auto_install
