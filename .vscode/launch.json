	"version": "0.2.0",
	"configurations": [
		{
			"name": "(gdb) app",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/tests/app/tests",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/tests/app",
			"environment": [{"name": "LD_LIBRARY_PATH", "value": "../../src/build"}],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "build_debug"
		},
		{
			"name": "(gdb) book",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/tests/book/build/tests",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/tests/book",
			"environment": [{"name": "LD_LIBRARY_PATH", "value": "../../src/morda/build:../harness/mordavokne/build"}],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "build_debug"
		},
		{
			"name": "(gdb) inflating",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/tests/inflating/tests",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/tests/inflating",
			"environment": [{"name": "LD_LIBRARY_PATH", "value": "../../src/build"}],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "build_debug"
		}
	]
}