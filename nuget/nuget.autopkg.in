			res: ..\res\morda_res\**\*;
		}
		[x86,v142,debug,MultiThreadedDebug] {
			lib: ..\msvs_solution\v142_Debug_MT\libmorda.lib;
			res: ..\res\morda_res\**\*;
		}
		[x64,v142,release,MultiThreaded] {
