		[x64,v142,debug,MultiThreadedDebug] {
			lib: ..\msvs_solution\x64\v142_Debug_MT\libmorda.lib;
			res: ..\res\morda_res\**\*;
		}
		*/
		
		[x86,v142,release,MultiThreadedDLL] {
			lib: ..\msvs_solution\v142_Release_MD\libmorda.lib;
			res: ..\res\morda_res\**\*;
		}
		[x86,v142,debug,MultiThreadedDebugDLL] {
