@pile{
	@column{
		@busy{
			id {busy_spinner}
			visible {false}
		}
		@push_button{
			id {busy_toggle_button}

			@text{
				text {"toggle busy spinner"}
			}
		}
		@busy{
			id {busy_spinner2}
		}
		@push_button{
			id {refresh_toggle_button}

			@refresh{
				id {refresh_spinner}
			}
		}
		@push_button{
			enabled {false}

			@refresh{
				id {refresh_spinner}
			}
		}
	}
}
